{
  "name": "hyper-static",
  "version": "0.1.0",
  "description": "HyperScript/Markdown-based Static Site Generator",
  "main": "index.js",
  "watch": {
    "build:html": "src/**/*.*"
  },
  "scripts": {
    "watch:html": "npm-watch",
    "watch:pcss": "postcss src/index.pcss --watch -o public/style.css",
    "build:html": "node scripts/build",
    "build:pcss": "postcss src/index.pcss --env production -o public/style.css",
    "clean:html": "rm -fr public",
    "build": "run-s build:*",
    "clean": "run-s clean:*",
    "budo": "budo -d public -p 3000 -l=*.{html,css}",
    "start": "run-p budo watch:*"
  },
  "keywords": [],
  "author": "spacejack",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.4.7",
    "budo": "^11.6.0",
    "eslint": "^5.14.0",
    "hyperscript": "^2.0.2",
    "marked": "^0.6.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^6.1.1",
    "postcss-custom-properties": "^8.0.9",
    "postcss-import": "^12.0.1",
    "postcss-nesting": "^7.0.0",
    "stylelint-config-recommended": "^2.1.0"
  }
}
